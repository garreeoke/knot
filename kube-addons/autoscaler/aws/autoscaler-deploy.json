{
  "apiVersion": "extensions/v1beta1",
  "kind": "Deployment",
  "metadata": {
    "name": "cluster-autoscaler",
    "namespace": "kube-system",
    "labels": {
      "app": "cluster-autoscaler"
    }
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "matchLabels": {
        "app": "cluster-autoscaler"
      }
    },
    "template": {
      "metadata": {
        "labels": {
          "app": "cluster-autoscaler"
        },
        "annotations": {
          "scheduler.alpha.kubernetes.io/tolerations": "[{\"key\":\"dedicated\", \"value\":\"master\", \"effect\":\"NoSchedule\"}]"
        }
      },
      "spec": {
        "containers": [{
          "image": "gcr.io/google_containers/cluster-autoscaler:v0.5.1",
          "name": "cluster-autoscaler",
          "env": [{
            "name": "AWS_REGION",
            "valueFrom": {
              "configMapKeyRef": {
                "name": "global-env",
                "key": "aws-region"
              }
            }
          },
            {
              "name": "AWS_MIN_NODES",
              "valueFrom": {
                "configMapKeyRef": {
                  "name": "global-env",
                  "key": "autoscaler-min-nodes"
                }
              }
            },
            {
              "name": "AWS_MAX_NODES",
              "valueFrom": {
                "configMapKeyRef": {
                  "name": "global-env",
                  "key": "autoscaler-max-nodes"
                }
              }
            },
            {
              "name": "AWS_ASG_NAME",
              "valueFrom": {
                "configMapKeyRef": {
                  "name": "global-env",
                  "key": "autoscaler-group-name"
                }
              }
            }
          ],
          "resources": {
            "limits": {
              "cpu": "100m",
              "memory": "300Mi"
            },
            "requests": {
              "cpu": "100m",
              "memory": "300Mi"
            }
          },
          "command": [
            "./cluster-autoscaler",
            "--v=4",
            "--cloud-provider=aws",
            "--skip-nodes-with-local-storage=false",
            "--nodes=$(AWS_MIN_NODES):$(AWS_MAX_NODES):$(AWS_ASG_NAME)"
          ],
          "volumeMounts": [{
            "name": "ssl-certs",
            "mountPath": "/etc/ssl/certs/ca-certificates.crt",
            "readOnly": true
          }],
          "imagePullPolicy": "Always"
        }],
        "nodeSelector": {
          "kubernetes.io/role": "master"
        },
        "volumes": [{
          "name": "ssl-certs",
          "hostPath": {
            "path": "/etc/ssl/certs/ca-certificates.crt"
          }
        }]
      }
    }
  }
}