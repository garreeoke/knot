{
    "kind": "DaemonSet",
    "apiVersion": "extensions/v1beta1",
    "metadata": {
        "name": "kube-registry-proxy",
        "namespace": "kube-system",
        "labels": {
            "app": "kube-registry-proxy"
        }
    },
    "spec": {
        "selector": {
            "matchLabels": {
                "app": "kube-registry-proxy"
            }
        },
        "template": {
            "metadata": {
                "labels": {
                    "app": "kube-registry-proxy"
                }
            },
            "spec": {
                "containers": [
                    {
                        "name": "registry",
                        "image": "torchbox/kube-registry-proxy",
                        "ports": [
                            {
                                "name": "registry",
                                "hostPort": 5000,
                                "containerPort": 5000,
                                "protocol": "TCP"
                            }
                        ],
                        "env": [
                            {
                                "name": "REGISTRY_HOST",
                                "value": "kube-registry.kube-system.svc.cluster.local"
                            },
                            {
                                "name": "REGISTRY_PORT",
                                "value": "5000"
                            },
                            {
                                "name": "FORWARD_PORT",
                                "value": "5000"
                            }
                        ],
                        "resources": {
                            "limits": {
                                "cpu": "100m",
                                "memory": "50Mi"
                            }
                        },
                        "terminationMessagePath": "/dev/termination-log",
                        "imagePullPolicy": "Always"
                    }
                ],
                "restartPolicy": "Always",
                "terminationGracePeriodSeconds": 30,
                "dnsPolicy": "ClusterFirst",
                "securityContext": {}
            }
        }
    }
}
