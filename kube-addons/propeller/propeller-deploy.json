{
  "apiVersion": "extensions/v1beta1",
  "kind": "Deployment",
  "metadata": {
    "name": "propeller",
    "namespace": "kube-system"
  },
  "spec": {
    "replicas": 1,
    "template": {
      "metadata": {
        "labels": {
          "app": "propeller",
          "version": "develop"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "propeller",
            "image": "applariat/propeller",
            "imagePullPolicy": "Always",
            "env": [
              {
                "name": "NAMESPACE",
                "valueFrom": {
                  "fieldRef": {
                    "apiVersion": "v1",
                    "fieldPath": "metadata.namespace"
                  }
                }
              },
              {
                "name": "APL_BUILD_IMAGE_TAG",
                "valueFrom": {
                  "configMapKeyRef": {
                    "name": "global-env",
                    "key": "propeller-apl-build-image-tag"
                  }
                }
              },
              {
                "name": "PROPELLER_APL_BUILD_IMAGE_TAG",
                "valueFrom": {
                  "configMapKeyRef": {
                    "name": "global-env",
                    "key": "propeller-apl-build-image-tag"
                  }
                }
              },
              {
                "name": "CLUSTER_MGR_APL_BUILD_IMAGE_TAG",
                "valueFrom": {
                  "configMapKeyRef": {
                    "name": "global-env",
                    "key": "cluster-mgr-apl-build-image-tag"
                  }
                }
              },
              {
                "name": "COMPONENT_BUILDER_APL_BUILD_IMAGE_TAG",
                "valueFrom": {
                  "configMapKeyRef": {
                    "name": "global-env",
                    "key": "component-builder-apl-build-image-tag"
                  }
                }
              },
              {
                "name": "APL_LEAVE_JOB_POD",
                "valueFrom": {
                  "configMapKeyRef": {
                    "name": "global-env",
                    "key": "propeller-leave-job-pod"
                  }
                }
              },
              {
                "name": "APL_API",
                "valueFrom": {
                  "configMapKeyRef": {
                    "name": "global-env",
                    "key": "api-url"
                  }
                }
              },
              {
                "name": "APL_IGNORE_SSL",
                "valueFrom": {
                  "configMapKeyRef": {
                    "name": "global-env",
                    "key": "propeller-ignore-ssl"
                  }
                }
              },
              {
                "name": "APL_MQ",
                "valueFrom": {
                  "configMapKeyRef": {
                    "name": "global-env",
                    "key": "propeller-apl-mq"
                  }
                }
              },
              {
                "name": "APL_AMQP_HOST",
                "valueFrom": {
                  "configMapKeyRef": {
                    "name": "global-env",
                    "key": "rabbit-host"
                  }
                }
              },
              {
                "name": "APL_AMQP_PORT",
                "valueFrom": {
                  "configMapKeyRef": {
                    "name": "global-env",
                    "key": "rabbit-port"
                  }
                }
              },
              {
                "name": "APL_AMQP_USE_SSL",
                "valueFrom": {
                  "configMapKeyRef": {
                    "name": "global-env",
                    "key": "rabbitmq-ssl"
                  }
                }
              },
              {
                "name": "APL_AMQP_VHOST",
                "valueFrom": {
                  "configMapKeyRef": {
                    "name": "global-env",
                    "key": "rabbit-vhost"
                  }
                }
              },
              {
                "name": "APL_AMQP_ROUTING_KEY",
                "valueFrom": {
                  "configMapKeyRef": {
                    "name": "global-env",
                    "key": "propeller-apl-amqp-routing-key"
                  }
                }
              },
              {
                "name": "APL_AMQP_EXCHANGE_NAME",
                "valueFrom": {
                  "configMapKeyRef": {
                    "name": "global-env",
                    "key": "apl-amqp-exchange-key"
                  }
                }
              },
              {
                "name": "APL_SVC_USERNAME",
                "valueFrom": {
                  "configMapKeyRef": {
                    "name": "global-env",
                    "key": "rabbit-svc-username"
                  }
                }
              },
              {
                "name": "APL_SVC_PASSWORD",
                "valueFrom": {
                  "configMapKeyRef": {
                    "name": "global-env",
                    "key": "rabbit-svc-password"
                  }
                }
              },
              {
                "name": "CLUSTER_ID",
                "valueFrom": {
                  "configMapKeyRef": {
                    "name": "global-env",
                    "key": "cluster-id"
                  }
                }
              }
            ],
            "ports": [
              {
                "containerPort": 8080
              }
            ],
            "livenessProbe": {
              "httpGet": {
                "path": "/v1/propeller/healthz",
                "port": 8080
              },
              "initialDelaySeconds": 5,
              "periodSeconds": 10
            }
          }
        ]
      }
    }
  }
}
