{
  "apiVersion": "extensions/v1beta1",
  "kind": "Deployment",
  "metadata": {
    "name": "external-dns"
  },
  "spec": {
    "strategy": {
      "type": "Recreate"
    },
    "template": {
      "metadata": {
        "labels": {
          "app": "external-dns"
        }
      },
      "spec": {
        "containers": [{
          "name": "external-dns",
          "image": "registry.opensource.zalan.do/teapot/external-dns:v0.4.0",
          "env": [{
            "name": "AWS_ACCESS_KEY_ID",
            "valueFrom": {
              "secretKeyRef": {
                "name": "external-dns",
                "key": "external-dns-key"
              }
            }
          },
            {
              "name": "AWS_SECRET_ACCESS_KEY",
              "valueFrom": {
                "secretKeyRef": {
                  "name": "external-dns",
                  "key": "external-dns-secret"
                }
              }
            }
          ],
          "args": [
            "--source=service",
            "--source=ingress",
            "--provider=aws",
            "--registry=txt",
            "--txt-owner-id=applariat"
          ]
        }]
      }
    }
  }
}